<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="aipay_prompt_dialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
    
　　 	        <item name="android:windowNoTitle">true</item>
        <item name="android:textColor">@color/aipay_text_black</item>
        <item name="android:windowBackground">@color/aipay_transparent</item>
        <item name="android:windowIsFloating">true</item>
    </style>

    <style name="aipay_prompt_login_dialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>

　　 		        <item name="android:windowNoTitle">true</item>
        <item name="android:textColor">#ff000000</item>
        <item name="android:windowBackground">@color/aipay_transparent</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:background">@color/aipay_transparent</item>
    </style>

    <style name="aipay_full_dialog">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowBackground">@null</item>
    </style>

    <style name="aipay_hint_dialog">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowBackground">@color/aipay_transparent</item>
    </style>

    <style name="CustomDialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:windowSoftInputMode">stateUnspecified|adjustPan</item>
    </style>

    <style name="CustomProgressDialog" parent="@style/CustomDialog">
        <item name="android:backgroundDimAmount">0.85</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="list_font" parent="@android:style/Widget.TextView">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="input_font" parent="@android:style/Widget.TextView">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/input_font_color</item>
    </style>

    <style name="style_session_msg">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/session_text</item>
    </style>

    <style name="button_font" parent="@android:style/Widget.TextView">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/pay_white</item>
    </style>

</resources>