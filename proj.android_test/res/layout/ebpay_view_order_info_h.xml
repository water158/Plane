<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" 
    android:layout_width="fill_parent"
    android:layout_height="wrap_content">
	<RelativeLayout
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:paddingLeft="10dp"
	    android:paddingTop="15dp"
	    android:paddingRight="10dp"
	    android:paddingBottom="15dp"
	    android:background="@color/ebpay_order_bg">
		<LinearLayout
		    android:id="@+id/v_row_content" 
		    android:layout_width="fill_parent"
		    android:layout_height="wrap_content"
		    android:orientation="horizontal">
	        <LinearLayout
	            android:id="@+id/row1"
	            android:layout_width="fill_parent"
	            android:layout_height="wrap_content"
	            android:layout_weight="0.5"
	            android:gravity="bottom"
	            android:orientation="horizontal" >
	            <LinearLayout 
	                android:layout_width="fill_parent"
	                android:layout_height="wrap_content"
	                android:orientation="horizontal"
	                android:paddingTop="5dp"
	                android:layout_weight="0.5">
		            <TextView
		                android:id="@+id/goods_name"
		                android:layout_width="0dp"
		                android:layout_height="wrap_content"
		                android:textSize="@dimen/ebpay_text_size_15"
		                android:textColor="@color/ebpay_text_333333"
		                android:layout_weight=".3"
		                android:text="@string/ebpay_goods_name" />
		            <com.baidu.android.pay.view.MarqueeTextView
		                android:id="@+id/goods"
		                android:layout_width="0dp"
		                android:layout_height="wrap_content"
		                android:textSize="@dimen/ebpay_text_size_15"
		                android:textColor="@color/ebpay_text_333333"
		                android:layout_weight=".7"
		                android:ellipsize="marquee"
		                android:marqueeRepeatLimit="marquee_forever"
		                android:singleLine="true" />
	            </LinearLayout>
				<LinearLayout
	                android:id="@+id/company_name_row" 
	                android:layout_width="fill_parent"
	                android:layout_height="wrap_content"
	                android:orientation="horizontal"
	                android:visibility="gone"
	                android:layout_weight="0.5">
		            <TextView
		                android:id="@+id/company_name"
		                android:layout_width="0dp"
		                android:layout_height="wrap_content"
		                android:textSize="@dimen/ebpay_text_size_15"
		                android:textColor="@color/ebpay_text_333333"
		                android:layout_weight=".3"
		                android:text="@string/ebpay_sp_name" />
		            <com.baidu.android.pay.view.MarqueeTextView
		                android:id="@+id/company"
		                android:layout_width="0dp"
		                android:layout_height="wrap_content"
		                android:textSize="@dimen/ebpay_text_size_15"
		                android:textColor="@color/ebpay_text_333333"
		                android:layout_weight=".7"
		                android:ellipsize="marquee"
		                android:marqueeRepeatLimit="marquee_forever"
		                android:singleLine="true" />
	            </LinearLayout>
	        </LinearLayout>
	
	        <LinearLayout
	            android:id='@+id/row2'
	            android:layout_width="fill_parent"
	            android:layout_height="wrap_content"
	            android:layout_weight="0.5"
	            android:orientation="horizontal">
	            <LinearLayout 
	                android:id="@+id/order_no_row"
	                android:layout_width="fill_parent"
	                android:layout_height="wrap_content"
	                android:paddingTop="5dp"
	                android:orientation="horizontal"
	                android:visibility="gone"
	                android:layout_weight="0.5">
		            <TextView
		                android:id="@+id/order_no"
		                android:layout_width="0dp"
		                android:layout_height="wrap_content"
		                android:textSize="@dimen/ebpay_text_size_15"
		                android:textColor="@color/ebpay_text_333333"
		                android:layout_weight=".3"
		                android:text="@string/ebpay_order_no" />
		           <com.baidu.android.pay.view.MarqueeTextView
		                android:id="@+id/order"
		                android:layout_width="0dp"
		                android:layout_height="wrap_content"
		                android:textSize="@dimen/ebpay_text_size_15"
		                android:textColor="@color/ebpay_text_333333"
		                android:layout_weight=".7"
		                android:ellipsize="marquee"
		                android:marqueeRepeatLimit="marquee_forever"
		                android:singleLine="true" />
				</LinearLayout>
				<LinearLayout 
	                android:layout_width="fill_parent"
	                android:layout_height="wrap_content"
	                android:orientation="horizontal"
	                android:layout_weight="0.5">
	                <TextView
		                android:id="@+id/price_tip"
		                android:layout_width="0dp"
		                android:layout_height="wrap_content"
		                android:textSize="@dimen/ebpay_text_size_15"
		                android:textColor="@color/ebpay_text_333333"
		                android:layout_weight=".3"
		                android:text="@string/ebpay_price_tip" />
	            	<com.baidu.android.pay.view.MarqueeTextView
		                android:id="@+id/price"
		                android:layout_width="0dp"
		                android:layout_height="wrap_content"
		                android:textSize="@dimen/ebpay_text_size_15"
		                android:textColor="@color/ebpay_text_333333"
		                android:layout_weight=".7"
		                android:ellipsize="marquee"
		                android:marqueeRepeatLimit="marquee_forever"
		                android:singleLine="true" />
	            </LinearLayout>
	        </LinearLayout>
	   	</LinearLayout>
	
	    <ImageView
	        android:id="@+id/arrow_icon"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:padding="10dp"
	        android:layout_alignParentRight="true"
	        android:layout_alignParentBottom="true"
	        android:contentDescription="@string/ebpay_img"
	        android:src="@drawable/ebpay_arrow_expand_order" />
	</RelativeLayout>
	<View
	    android:layout_width="fill_parent"
	    android:layout_height="2dp"
	    android:background="@color/ebpay_6c">
	</View>
	<View
	    android:layout_width="fill_parent"
	    android:layout_height="1dp"
	    android:background="@color/ebpay_white">
	</View>
</LinearLayout>