<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingLeft="10dip"
    android:paddingRight="10dip" >

    <TextView
        android:id="@+id/pay_select_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="@string/ebpay_no_card_pay_tip1"
        android:textColor="@color/ebpay_text_333333"
        android:textSize="@dimen/ebpay_text_size_18" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/ebpay_edit_text_view_bg"
        android:layout_marginTop="10dp"
        android:orientation="vertical"
        android:baselineAligned="false" >

        <RelativeLayout
            android:id="@+id/operatorLayout"
            android:layout_width="fill_parent"
            android:layout_height="43dp"
            android:clickable="true" >
            
            <TextView
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_centerVertical="true"
	            android:layout_alignParentLeft="true"
	            android:layout_marginLeft="10dp"
	            android:text="@string/ebpay_operator"
	            android:textColor="@color/ebpay_text_333333"
	            android:textSize="@dimen/ebpay_text_size_15" />

            <TextView
                android:id="@+id/keyType"
                android:layout_toLeftOf="@+id/v_guide"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:duplicateParentState="true"
                android:layout_marginRight="10dp"
                android:text="@string/ebpay_mobile_china"
                android:textColor="@color/ebpay_text_5fbbd4"
                android:textSize="@dimen/ebpay_text_size_15" />

            <ImageView
               	android:id="@+id/v_guide"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:layout_alignParentRight="true"
                android:src="@drawable/ebpay_arrow_expand_order" />
        </RelativeLayout>
        
        <View
            android:layout_width="match_parent"
            android:layout_height="1dip"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/ebpay_broken_line" />

        <RelativeLayout
            android:id="@+id/faceValueLayout"
            android:layout_width="fill_parent"
            android:layout_height="43dp"
            android:clickable="true" >
            
            <TextView
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_centerVertical="true"
	            android:layout_alignParentLeft="true"
	            android:layout_marginLeft="10dp"
	            android:text="@string/ebpay_face_value"
	            android:textColor="@color/ebpay_text_333333"
	            android:textSize="@dimen/ebpay_text_size_15" />

            <TextView
                android:id="@+id/faceValue"
                android:layout_toLeftOf="@+id/v_guide"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:duplicateParentState="true"
                android:layout_marginRight="10dp"
                android:text="@string/ebpay_mobile_china"
                android:textColor="@color/ebpay_text_5fbbd4"
                android:textSize="@dimen/ebpay_text_size_15" />

            <ImageView
               	android:id="@+id/v_guide"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:layout_alignParentRight="true"
                android:src="@drawable/ebpay_arrow_expand_order" />
        </RelativeLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/noBankPayTip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/ebpay_line_margin_10"
        android:textColor="@color/ebpay_text_ff7800"
        android:textSize="15sp" />

    <LinearLayout
         android:id="@+id/pay_card_area"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dip"
        android:background="@drawable/ebpay_edit_text_view_bg"
        android:gravity="center_vertical"
        android:orientation="vertical" >
		
        <LinearLayout 
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@color/ebpay_white">
            <TextView
	            android:layout_width="wrap_content"
	            android:layout_height="43dp"
	            android:gravity="center_vertical"
	            android:layout_marginLeft="10dp"
	            android:text="@string/ebpay_card_no"
	            android:textColor="@color/ebpay_text_333333"
	            android:textSize="@dimen/ebpay_text_size_15" />
            <EditText
	            android:id="@+id/pay_no"
	            android:layout_marginLeft="10dp"
	            android:layout_width="match_parent"
	            android:background="@color/ebpay_white"
	            android:layout_height="43dp"
	            android:ellipsize="end"
	            android:gravity="center_vertical"
	            android:inputType="text"
	            android:maxLength="20"/>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dip"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/ebpay_broken_line" />
        
        <LinearLayout 
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@color/ebpay_white">
            <TextView
	            android:layout_width="wrap_content"
	            android:layout_height="43dp"
	            android:gravity="center_vertical"
	            android:layout_marginLeft="10dp"
	            android:text="@string/ebpay_passwd"
	            android:textColor="@color/ebpay_text_333333"
	            android:textSize="@dimen/ebpay_text_size_15" />
            <EditText
	            android:id="@+id/pay_pass"
	            android:layout_marginLeft="10dp"
	            android:layout_width="match_parent"
	            android:background="@color/ebpay_white"
	            android:layout_height="43dp"
	            android:ellipsize="end"
	            android:gravity="center_vertical"
	            android:inputType="text"
	            android:maxLength="20"/>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>